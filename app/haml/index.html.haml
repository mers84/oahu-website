  %body
    %header.navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{:href=>"/"} oahu
          %a.btn.btn-navbar{'data-toggle'=>'collapse', 'data-target'=>'.nav-collapse'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          .nav-collapse
            %ul.nav.secondary-nav.pull-right
              %li.logged_in.dropdown{"data-oahu-display"=>'connected'}
                %a.dropdown-toggle{:href=>"#",  "data-toggle"=>"dropdown"}
                  %span.oahu_username{"data-oahu-bind"=>'name'}
                  %span.oahu_userpicture
                  %b.caret
                %ul.dropdown-menu
                  %li
